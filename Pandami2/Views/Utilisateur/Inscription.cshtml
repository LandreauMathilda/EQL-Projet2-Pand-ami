

@model Pandami2.Models.ViewModelUtilisateur
   
@{
    ViewBag.Title = "Inscription";

}
<div class="jumbotron text-center">
    <h2>Inscription</h2>
</div>
<h2> Formulaire d'inscription</h2>
<p>Remplissez le formulaire ci-dessous pour accéder aux demandes en cours </p>
<hr />
<form id="formUtilisateur" name="formUtilisateur" action="" method="post">
    <input type="text" id="idUtilisateur" name="idUtilisateur" value="@Model.Utilisateur.Id_utilisateur" hidden />
    <div class="form-group">
        <table>
            <tr>
                <td><label>Nom:</label></td>
                <td>
                    <input id="nom" name="nom" type="text" value="@Model.Utilisateur.Nom" required/>
                </td>
            </tr>
            <tr>
                <td><label>Prenom:</label></td>
                <td>
                    <input id="prenom" name="prenom" type="text" value="@Model.Utilisateur.Prenom" required/>
                </td>
            </tr>
            <tr>
                <td><label>Genre:</label></td>
                <td>
                    <select name="Id_Genre" required>
                        @foreach (KeyValuePair<int, string> kpv in Model.GenreDao.ListeGenre())
                        {
                            <option value="@kpv.Key"> @kpv.Value </option>
                        }
                    </select>
                </td>
            <tr>
            <tr>
                <td><label>Date de naissance:</label></td>
                <td>
                    <input id="date_naissance" type="date" name="date_naissance" value="@Model.Utilisateur.Date_naissance" required />
                </td>
            </tr>
            <tr>
                <td><label>Adresse:</label></td>
                <td>
                    <input id="adresse" name="adresse" type="text" value="@Model.Utilisateur.Adresse" required />
                </td>
            </tr>
            <tr>
                <td><label>Vile:</label></td>
                <td>
                    <select name="Id_ville" required>
                        @{ foreach (KeyValuePair<int, string> kpv in Model.VilleDao.ChargerListeVille())
                            {
                                <option value="@kpv.Key"> @kpv.Value </option>
                            }
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label> Numero de telephone :</label>
                </td>
                <td>
                    <input name="num_telephone" type="tel" value="@Model.Utilisateur.Num_telephone" required pattern="[0-9]{2}[0-9]{2}[0-9]{2}[0-9]{2}[0-9]{2}"/>
                </td>
            </tr>
            <tr>
                <td><label>Adresse electronique:</label></td>
                <td>
                    <input id="email" name="email" type="email" value="@Model.Utilisateur.Email" required />
                </td>
            </tr>
            <tr>
                <td>
                    <input id="date_inscription" type="date" name="date_inscription" value="@Model.Utilisateur.Date_inscription" hidden />
                </td>
            </tr>
        </table>
    </div>
    <input type="submit" nom="enregistrer" id="enregistrer" value="valider" onclick=" />
    <script>
        function age()
        {
            var age = document.getElementById("date_naissance")
            if (age - Date.now < 18)
            {
                alert("Vous devez avoir plus de 18ans");
            }
        }      
    </script>
</form>
















